<?xml version="1.0"?>
<skin version="1.1" name="Glow" author="LongTail Video">

	<settings>
		<setting name="backcolor" value="0x000000" />
		<setting name="frontcolor" value="0xeeeeee" />
		<setting name="lightcolor" value="0xeeeeee" />
		<setting name="screencolor" value="0x000000" />
	</settings>

	<components>
		<component name="controlbar">
			<settings>
				<setting name="margin" value="0" />
				<setting name="fontsize" value="11" />
				<setting name="fontcolor" value="0xEEEEEE" />
				<setting name="buttoncolor" value="0xEEEEEE" />
			</settings>

			<layout>
				<group position="left">
					<button name="play" />
					<text name="elapsed" />
				</group>
				<group position="center">
					<slider name="time" />
				</group>
				<group position="right">
					<text name="duration" />
					<button name="blank" />
					<button name="mute" />
					<button name="fullscreen" />
				</group>
			</layout>

			<elements>
				<element name="background" src="background." />
				<element name="capLeft" src="divider." />
				<element name="capRight" src="divider." />
				<element name="divider" src="divider." />
				<element name="blankButton" src="blankButton." />
				<element name="fullscreenButton" src="fullscreenButton." />
				<element name="fullscreenButtonOver" src="fullscreenButtonOver." />
				<element name="muteButton" src="muteButton." />
				<element name="muteButtonOver" src="muteButtonOver." />
				<element name="pauseButton" src="pauseButton." />
				<element name="pauseButtonOver" src="pauseButtonOver." />
				<element name="playButton" src="playButton." />
				<element name="playButtonOver" src="playButtonOver." />
				<element name="timeSliderBuffer" src="timeSliderBuffer." />
				<element name="timeSliderCapLeft" src="timeSliderCapLeft." />
				<element name="timeSliderCapRight" src="timeSliderCapRight." />
				<element name="timeSliderProgress" src="timeSliderProgress." />
				<element name="timeSliderRail" src="timeSliderRail." />
				<element name="normalscreenButton" src="normalscreenButton." />
				<element name="normalscreenButtonOver" src="normalscreenButtonOver." />
				<element name="unmuteButton" src="unmuteButton." />
				<element name="unmuteButtonOver" src="unmuteButtonOver." />
				<element name="volumeSliderRail" src="divider." />
				<element name="volumeSliderProgress" src="divider." />
			</elements>
		</component>
		
		<component name="display">
			<settings>
				<setting name="bufferinterval" value="250" />
				<setting name="bufferrotation" value="90" />
			</settings>
			<elements>
				<element name="background" src="background." />
				<element name="playIcon" src="playIcon." />
				<element name="muteIcon" src="muteIcon." />
				<element name="errorIcon" src="bufferIcon." />
				<element name="bufferIcon" src="bufferIcon." />
			</elements>
		</component>
		
		<component name="dock">
			<settings>
				<setting name="fontcolor" value="0xFFFFFF" />
			</settings>
			<elements>
				<element name="button" src="button." />
			</elements>
		</component>

		<component name="playlist">
			<settings>
				<setting name="fontcolor" value="0xEEEEEE" />
				<setting name="overcolor" value="0xFFFFFF" />
				<setting name="activecolor" value="0xFFFFFF" />
				<setting name="backgroundcolor" value="0x333333" />
			</settings>
			<elements>
				<element name="item" src="item." />
				<element name="itemOver" src="itemOver." />
				<element name="sliderCapBottom" src="sliderCapBottom." />
				<element name="sliderCapTop" src="sliderCapTop." />
				<element name="sliderRail" src="sliderRail." />
				<element name="sliderThumb" src="sliderThumb." />
			</elements>
		</component>

		<component name="sharing">
			<elements>
				<element name="embedIcon" src="embedIcon." />
				<element name="embedScreen" src="embedScreen." />
				<element name="shareIcon" src="shareIcon." />
				<element name="shareScreen" src="shareScreen." />
			</elements>
		</component>

	</components>

</skin>